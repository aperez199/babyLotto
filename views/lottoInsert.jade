extends layout

block content
  img( src = '/images/logo.png' )
  h1 Ingresa tu apuesta
  #content
  p Ingresa la fecha de nacimiento
  b Importante: 
  p Esta nueva fecha reemplazará cualquier otra fecha que hayas ingresado para el mismo bebé
  br
  form( method = "post", action = '/lottoCreate')
    key Bebé
        br
        select( name = "baby" )
            for item in babies
                option( value = item._id ) #{item.babyName}
        br
    key Fecha
        if( crappyBrowser )
            br
            input#datepicker( type = "text", name = "selectedDate" )
            br
        else
            br
            input( type = "date", name = "selectedDate" )
            br
    input( type = "submit", value = "Guardar" );
  br
  a( href = '/' ) Volver
